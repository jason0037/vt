<div class="row">
  <div class="title" >
    <span style="border: 3px solid #d60f58"> </span>
    <span style="margin-left: 10px;font-size: 20px; line-height:39px;font-weight: bold">预存款信息</span>
    <hr style="margin: 0;border: 1px dotted #d60f58;">   <br>
  </div>
	<div class="val">您当前的预存款余额为 : <span>&yen;<%=@user.advance.to_i%></span></div>
	<br>
	<%  if @advances && @advances.size > 0%>
	<table class="table table-striped" id="advances_list" style="width:100%;">
		<tr>
			<th>时间</th>
			<th>事件</th>
			<th>存入金额</th>
			<th>支出金额</th>
			<th>当前余额</th>
		</tr>
		
		<%@advances.each  do |advance|%>
		<tr>
			<td><%=advance.logged_at%></td>
			<td><%=advance.message%></td>
			<td>&yen;<%=advance.import_money.to_i%></td>
			<td>&yen;<%=advance.explode_money.to_i%></td>
			<td><b>&yen;<%=advance.member_advance.to_i%></b></td>
		</tr>
		<%end%>
	</table>
	<div class="pagination">
		<%=will_paginate @advances,:container=>false if @user_coupons%>
	</div>
	<%else%>
	    <div class="no-record">暂无记录</div>
	<%end%>
